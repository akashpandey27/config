#!/bin/sh

# Do different tmux actions depending on X11 window class
# Suppose that WINDOWID env. var. is set

CLASS=`xprop -id $WINDOWID | grep WM_CLASS | cut '-d"' -f 2`

TMUX_SESSION="$(dirname $0)/tmux-session"

case $CLASS in
    yakuake)
        exec $TMUX_SESSION yakuake
        ;;
    #konsole)
    #dolphin)
    *)
        exec `chsh`
        ;;
esac

