[Repository Gmail]
type = Gmail
remoteuser = sshilovsky@gmail.com
folderfilter = lambda foldername: any(pattern in foldername for pattern in ['All Mail', 'Sent Mail'])
nametrans = lambda folder: 'all' if 'All Mail' in folder else 'sent' if 'Sent Mail' in folder else folder

readonly = False
realdelete=no
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
maxconnections = 5
